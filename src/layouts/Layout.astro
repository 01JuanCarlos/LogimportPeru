---
export interface Props {
	title: string;
	description: string;
	canonical: string;
}

const { title, description, canonical } = Astro.props;

import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";
import "bootstrap/dist/css/bootstrap.min.css";
import ScrollToTopButton from "../components/ScrollToTopButton.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon-logimport.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>
			Logimport Perú SAC | Soluciones Seguras para Minería y Logística
		</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={canonical} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/logo-logimport-peru.png" />
		<meta property="og:url" content={canonical} />
		<meta name="twitter:card" content="summary_large_image" />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
		/>

		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "ManufacturingCompany",

				/* ATRIBUTOS ESENCIALES DE LA EMPRESA */

				"name": "Logimport Perú SAC",
				"url": "https://logimportperusac.com/",
				"logo": "/favicon-logimport.svg",

				/* DESCRIPCIÓN Y SLOGAN BASADOS EN TU MISIÓN */

				"description": "Empresa peruana líder en el suministro de Big Bags (FIBC) para la industria minera, agrícola y logística, garantizando transporte y almacenamiento eficiente de materiales a granel.",
				"slogan": "Soluciones seguras, eficientes y sostenibles para la industria del Perú.",

				/* ENFOQUE GEOGRÁFICO (Clave para SEO Local) */

				"areaServed": {
					"@type": "Country",
					"name": "Perú"
				},

				/* INFORMACIÓN DE CONTACTO */

				"contactPoint": {
					"@type": "ContactPoint",
					"telephone": "[Tu número de teléfono de contacto en Perú]",
					"contactType": "Ventas y Soporte"
				},

				/* DETALLE DEL PRODUCTO/SERVICIO (El corazón de tu negocio) */

				"makesOffer": {
					"@type": "Offer",
					"itemOffered": {
						"@type": "Product",
						"name": "Big Bags de Alta Calidad para Minería, Agricultura y Logística",
						"category": "Soluciones de Embalaje Industrial",
						"description": "Big Bags con certificaciones de seguridad, diseñados para el transporte y almacenamiento sostenible de todo tipo de materiales a granel.",
						// Propiedades del producto que refuerzan el SEO
						"keywords": "Big Bags, FIBC, Sacos a Granel, Minería, Agricultura, Logística, Perú, Sostenibles"
					}
				},

				/* REDES SOCIALES */

				"sameAs": [
					"https://www.facebook.com/?locale=es_LA",
					"https://es.linkedin.com/"
					// Si tienes un canal de YouTube con videos de productos, añádelo
				]
			}
		</script>
	</head>
	<body>
		<slot />
		<ScrollToTopButton client:idle />
	</body>
</html>

<style is:global>
	/* El selector is:global garantiza que el estilo se aplique a todo el DOM */
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
