<section
    id="productos"
    class="products-bg w-100 py-5 text-center"
    aria-label="Productos Big Bag"
>
    <div class="container d-flex flex-column align-items-center gap-4">
        <h2 class="text-white fw-semibold">Big Bag de polipropileno</h2>

        <div class="row gap-5 justify-content-center">
            <!-- Producto 1 -->
            <article class="card" style="width: 18rem;" data-aos="flip-left">
                <img
                    class="card-img-top"
                    src="./big-bag-cielo-abierto-fondo-plano.jpg"
                    alt="Big Bag cielo abierto fondo plano"
                />
                <div class="card-body text-center">
                    <h5 class="card-title title-product fw-semibold">
                        Big Bag cielo abierto fondo plano
                    </h5>
                    <a
                        href="/cotizacion"
                        class="btn btn-product"
                        aria-label="Cotizar Big Bag cielo abierto fondo plano"
                    >
                        Cotizar
                    </a>
                </div>
            </article>

            <!-- Producto 2 -->
            <article class="card" style="width: 18rem;" data-aos="flip-right">
                <img
                    class="card-img-top"
                    src="./big-bag-cielo-abierto-buzon-descarga.jpg"
                    alt="Big Bag cielo abierto con buzón de descarga"
                />
                <div class="card-body text-center">
                    <h5 class="card-title title-product fw-semibold">
                        Big Bag cielo abierto con buzón de descarga
                    </h5>
                    <a
                        href="/cotizacion"
                        class="btn btn-product"
                        aria-label="Cotizar Big Bag cielo abierto con buzón de descarga"
                    >
                        Cotizar
                    </a>
                </div>
            </article>
        </div>
    </div>
</section>

<style>
    .products-bg {
        background-image: url("/fondo-seccion-productos-bigbag.png");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        background-attachment: fixed; /* aquí sí funciona */
    }

    .card {
        display: flex;
        align-items: center;
        padding: 0;
        border: none;
        overflow: hidden;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        border-radius: 3px;
    }
    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .card-img-top {
        width: 70%;
    }

    .card-body {
        display: flex;
        align-items: center;
        flex-direction: column;
        padding: 10;
        background: #4d5663;
        color: white;
        gap: 10px;
    }
    .btn-product {
        width: 143px;
        height: 49px;
        font-size: 16px;
        font-weight: 500;
        background: #e01f34 !important;
        color: white;
        border: none;
        border-radius: 3px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        transition: 0.3s;
    }

    .btn-product:hover {
        background: #c71c2f !important;
    }

    @media (max-width: 768px) {
        .card {
            width: 13rem !important;
        }
        .title-product {
            font-size: 1rem !important;
        }
    }
</style>
