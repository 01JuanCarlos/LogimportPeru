            <span
                ><i class="fa-solid fa-envelope"></i> soporte10@logimportperusac.com</span
            >
        </div>

        <!-- RIGHT -->
        <div class="right social">
            <i class="fa-brands fa-facebook"></i>
            <i class="fa-brands fa-instagram"></i>
            <i class="fa-brands fa-linkedin"></i>
        </div>
    </div>
</div>

<!-- NAVBAR -->
<div class="container p-0 container-nav">
    <nav class="navbar navbar-expand-lg py-3 nav-custom">
        <div
            class="d-flex align-items-center w-100"
            style="    justify-content: space-between;"
        >
            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center" href="/#inicio">
                <img src="/logo.png" alt="Logo" class="me-3" />
            </a>

            <!-- Botón responsive -->
            <button
                style=" border: none;
                        background: #F4F6F9;
                        font-size: 20px;"
                class="navbar-toggler"
                type="button"
                data-bs-toggle="offcanvas"
                data-bs-target="#menuLateral"
                ><a href="#menu-abierto">
                    <span class="navbar-toggler-icon"></span>
                </a>
            </button>

            <div
                class="offcanvas offcanvas-end"
                tabindex="-1"
                id="menuLateral-1"
            >
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title">Menú</h5>
                    <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="offcanvas"></button>
                </div>

                <div class="offcanvas-body">
                    <ul class="navbar-nav gap-3">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" href="/#inicio"
                                >INICIO</a
                            >
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" href="/#about"
                                >NOSOTROS</a
                            >
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" href="/quotations"
                                >COTIZAR</a
                            >
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" href="/#products"
                                >PRODUCTOS</a
                            >
                        </li>
                    </ul>
                </div>
            </div>

            <nav id="menu-abierto" class="menuLateral-2">
                <a href="#" class="boton-cerrar"
                    ><i class="fa-solid fa-xmark"></i></a
                >

                <ul>
                    <li><a href="/#inicio">Inicio</a></li>
                    <li><a href="/#about">Nosotros</a></li>
                    <li><a href="/quotations">COTIZAR</a></li>
                    <li><a href="/#products">Productos</a></li>
                    <li><a href="/#">Contacto</a></li>
                </ul>
            </nav>
            <!-- Botón Contactar -->
            <a href="#" class="btn-contact d-none d-lg-flex">
                <i class="fa-brands fa-whatsapp fa-2x"></i>
                Contactar
            </a>
        </div>
    </nav>
</div>

<style>
    /* -------------------------- */
    /* TOPBAR */
    /* -------------------------- */

    .topbar-wrapper {
        width: 100%;
        display: contents; /* se mantiene tu comportamiento */
    }

    .topbar {
        background-color: #0f2f5a;
        color: white;
        padding: 14px 92px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        clip-path: polygon(0 0, 100% 0, 96% 100%, 4% 100%);
        width: 80%;
    }

    .topbar .left span {
        margin-right: 20px;
    }

    .social i {
        margin-left: 12px;
        cursor: pointer;
        transition: 0.3s;
    }

    .social i:hover {
        color: #e01f34;
    }

    /* -------------------------- */
    /* NAVBAR */
    /* -------------------------- */
    .navbar-brand img {
        width: 200px;
    }
    .nav-custom .nav-link {
        color: black;
        transition: color 0.3s ease;
    }

    .nav-custom .nav-link:hover {
        color: #e01f34;
    }

    /* Botón contactar */
    .btn-contact {
        background: #e01f34;
        color: white;
        gap: 8px;
        align-items: center;
        padding: 10px 30px;
        border-radius: 3px;
        text-decoration: none;
        font-weight: 500;
        display: flex;
        transition: 0.3s;
    }

    .btn-contact:hover {
        background: #c81b2e;
        color: white;
    }

    /* Menu lateral */
    .offcanvas {
        background: #192638;
    }

    .btn-close {
        filter: invert(1);
    }

    @media (max-width: 1806px) {
        .topbar {
            width: 95%;
        }
    }

    @media (max-width: 768px) {
    }
    @media (max-width: 991px) {
        .navbar {
            padding: 0 !important;
            box-shadow: -2px 9px 10px rgba(0, 0, 0, 0.1);
        }
        .navbar-brand img {
            width: 155px;
        }
        .container-nav {
            position: fixed;
            z-index: 99;
            background: #f4f6f9;
            max-width: 991px;
        }
        .topbar-wrapper {
            display: none;
        }
        .nav-link,
        .offcanvas-title {
            color: white !important;
        }
        .offcanvas {
            padding: 20px;
        }
    }

    .contenido-principal {
        padding-top: 50px;
    }

    .boton-abrir,
    .boton-cerrar {
        text-decoration: none;
        border-radius: 0;
        margin-bottom: 0;
    }

    .boton-cerrar {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    /* --- ESTILOS DEL MENÚ LATERAL --- */

    .menuLateral-2 {
        /* Posicionamiento: Fijo a la DERECHA y arriba */
        position: fixed;
        top: 0;
        right: 0; /* ¡Cambiado de 'left' a 'right'! */
        height: 100%;
        width: 250px;
        background-color: #162a40;
        box-shadow: -2px 0 5px rgba(0, 0, 0, 0.5); /* Sombra hacia la izquierda */
        z-index: 100;
        padding-top: 60px;

        /* TRUCO CLAVE 1: Ocultar el menú por defecto */
        /* Mueve el menú completamente fuera de la pantalla (a la DERECHA) */
        /* Se usa 100% positivo para moverlo hacia la derecha */
        transform: translateX(100%);

        /* Animación: Agrega una transición suave */
        transition: transform 0.3s ease-in-out;
    }

    /* El resto de los estilos internos del menú (ul, li, a) permanecen igual */
    .menuLateral-2 ul {
        list-style: none;
        padding: 0;
    }

    .menuLateral-2 a {
        display: block;
        padding: 15px 20px;
        color: white;
        text-decoration: none;
    }

    /* --- LÓGICA DE APERTURA CON :target --- */

    /* TRUCO CLAVE 2: Muestra el menú cuando su ID es el objetivo (:target) */
    #menu-abierto:target {
        /* Mueve el menú a su posición original (visible, fuera del 100% de la derecha) */
        transform: translateX(0);
    }

    /* El truco del fondo para cerrar al hacer clic fuera también permanece igual */
    .menuLateral-2:target::before {
        content: "";
        display: block;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
    }
</style>
