<style>
    /* ESTADO INICIAL (Relative) */
    #main-nav {
        position: relative; /* Inicia como relative, ocupando espacio */
        width: 100%;
        color: white;
        padding: 10px 20px;
        z-index: 99;
        display: flex;
        justify-content: center;
        transition: box-shadow 0.3s ease-in-out;
        /* Otros estilos de tu nav */
    }

    /* ESTADO PEGAJOSO (Fixed) - Se activa con JavaScript */
    .sticky {
        height: 90px;
        position: fixed !important; /* Se fija en la ventana */
        top: 0; /* Siempre en la parte superior */
        left: 0; /* Alineado a la izquierda */
        /* Debe tener el mismo ancho para no colapsar */
        width: 100%;
        /* Opcional: a帽ade una sombra para que destaque */
        background: white;
    }
    #nav-placeholder {
        /*  MEJORA 2: Transici贸n para la 'height' */
        /* Esto suaviza la altura que aparece/desaparece, eliminando el "salto" */
        transition: height 0.3s ease-in-out;
        height: 0; /* Inicia en 0 (establecido por JS al inicio) */

        background: red;
    }
</style>

<script>
    // 1. Seleccionar la barra de navegaci贸n y el placeholder
    const navBar = document.getElementById("main-nav") as HTMLElement;
    const placeholder = document.getElementById(
        "nav-placeholder",
    ) as HTMLElement;

    // 2. Obtener la posici贸n inicial del nav y su altura
    const stickyPoint = navBar.offsetTop;
    const navHeight = navBar.offsetHeight;

    // 3. Define la media query para pantallas mayores o iguales a 992px
    // 992px es el punto de quiebre (breakpoint) com煤n para 'lg' en Bootstrap.
    const desktopQuery = window.matchMedia("(min-width: 992px)");

    function handleScroll() {
        // Si la pantalla es menor a 992px, salimos de la funci贸n inmediatamente
        if (!desktopQuery.matches) {
            // Aseguramos que la barra vuelva a su estado normal si se redimensiona
            navBar.classList.remove("sticky");
            placeholder.style.height = "0";
            return;
        }

        // --- L贸gica del Sticky Header (SOLO si la pantalla es grande) ---
        if (window.scrollY >= stickyPoint) {
            // A. Fija la barra de navegaci贸n
            navBar.classList.add("sticky");
            // B. Dale al placeholder la altura del nav
            placeholder.style.height = navHeight + "px";
        } else {
            // C. Quita la clase sticky
            navBar.classList.remove("sticky");
            // D. Vuelve la altura del placeholder a 0
            placeholder.style.height = "0";
        }
    }

    // 4. Conectar la funci贸n al evento de scroll
    window.addEventListener("scroll", handleScroll);

    // 5. Opcional: Ejecutar la funci贸n una vez al cargar y al cambiar el tama帽o de la ventana
    // Esto es 煤til si el usuario redimensiona la ventana
    window.addEventListener("resize", handleScroll);
    handleScroll(); // Ejecutar al inicio para establecer el estado correcto
</script>
