<style>
    .swiper {
        width: 80%;
    }

    .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #444;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 3px;
        overflow: hidden;
    }

    .swiper-slide img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .swiper-button-next,
    .swiper-button-prev {
        color: white !important;
    }
</style>

<!-- Swiper -->
<section class="container py-5" aria-label="Galería de Big Bags y aplicaciones">
    <h2 class="text-center mb-4" style="color: #052551;">
        Nuestra galería de productos y aplicaciones
    </h2>

    <div class="swiper mySwiper" data-aos="fade-up">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <img
                    src="./galeria-bigbag-logimport-1.png"
                    alt="Big Bags utilizados para almacenamiento de materiales a granel"
                />
            </div>

            <div class="swiper-slide">
                <img
                    src="./galeria-bigbag-logimport-2.png"
                    alt="Big Bags en proceso de carga industrial"
                />
            </div>

            <div class="swiper-slide">
                <img
                    src="./galeria-bigbag-logimport-3.png"
                    alt="Big Bags en almacén listos para distribución"
                />
            </div>

            <div class="swiper-slide">
                <img
                    src="./galeria-bigbag-logimport-1.png"
                    alt="Big Bags utilizados para almacenamiento de materiales a granel"
                />
            </div>

            <div class="swiper-slide">
                <img
                    src="./galeria-bigbag-logimport-2.png"
                    alt="Big Bags en proceso de carga industrial"
                />
            </div>

            <div class="swiper-slide">
                <img
                    src="./galeria-bigbag-logimport-3.png"
                    alt="Big Bags en almacén listos para distribución"
                />
            </div>
        </div>

        <!-- Paginación -->
        <div class="swiper-pagination"></div>

        <!-- Botones -->
        <div class="swiper-button-next" aria-label="Siguiente imagen"></div>
        <div class="swiper-button-prev" aria-label="Imagen anterior"></div>
    </div>
</section>

<script>
    import Swiper from "swiper";
    import { Navigation, Pagination } from "swiper/modules";

    var swiper = new Swiper(".mySwiper", {
        slidesPerView: 1,
        spaceBetween: 10,
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
        breakpoints: {
            640: {
                slidesPerView: 2,
                spaceBetween: 20,
            },
            768: {
                slidesPerView: 3,
                spaceBetween: 40,
            },
            1024: {
                slidesPerView: 3,
                spaceBetween: 50,
            },
        },
        modules: [Navigation, Pagination],
    });
</script>
