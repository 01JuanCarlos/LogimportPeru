<style>
  /* -------------------------------------- */
  /* CONTENEDOR SLIDER */
  /* -------------------------------------- */
  .container-slider-custom {
    border-radius: 20px;
    overflow: hidden;
    max-height: 65vh;
    padding: 0;
  }

  /* -------------------------------------- */
  /* SLIDER GENERAL */
  /* -------------------------------------- */
  .heroSwiper {
    width: 100%;
    min-height: 500px; /* ajusta este valor */
  }

  /* -------------------------------------- */
  /* SLIDE 1 - fondo + contenido */
  /* -------------------------------------- */
  .slide-1 {
    background-image:
      linear-gradient(to right, #0f2f5ae8, rgba(255, 255, 255, 0)),
      url("/banner-principal-logimport-peru.jpg");
  }
  .slide-2 {
    background-image:
      linear-gradient(to right, #0f2f5ae8, rgba(255, 255, 255, 0)),
      url("/banner-bigbag-logimport-2.jpg");
  }
  .slide-3 {
    background-image:
      linear-gradient(to right, #0f2f5ae8, rgba(255, 255, 255, 0)),
      url("/banner-bigbag-logimport-3.jpg");
  }
  .slide {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: 58% 42%;
    background-repeat: no-repeat;
  }

  /* -------------------------------------- */
  /* CONTENIDO DEL SLIDE */
  /* -------------------------------------- */
  .slide-content {
    flex-direction: column;
    padding-inline: 3.5rem;
    gap: 22px;
  }

  /* Título */
  .slide-title {
    font-weight: 600;
    font-size: 2.8rem;
    margin: 0;
    color: white;
  }

  /* Descripción */
  .slide-desc {
    font-size: 16px;
    margin-top: 10px;
    color: white;
    line-height: 1.5;
  }

  /* -------------------------------------- */
  /* BOTÓN */
  /* -------------------------------------- */
  .btn-slide {
    width: 143px;
    height: 49px;
    font-size: 16px;
    font-weight: 500;
    background: #e01f34;
    color: white;
    border: none;
    border-radius: 3px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: 0.3s;
  }

  .btn-slide:hover {
    background: #c71c2f;
  }

  /* -------------------------------------- */
  /* DEFAULT PARA LOS OTROS SLIDES */
  /* -------------------------------------- */
  .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 2rem;
    color: white;
    background: #333;
  }

  @media (max-width: 576px) {
    .swiper-button-next,
    .swiper-button-prev {
      display: none;
    }
    .slide-content {
      padding-inline: 1.5rem;
    }
    .slide-desc {
      font-size: 14px;
    }
    .slide-title {
      font-weight: 600;
      font-size: 2.5rem;
    }
    .container-slider-custom {
      border-radius: 0px;
    }
  }
</style>
<div
  class="swiper heroSwiper container container-slider-custom"
  data-aos="zoom-in"
  id="inicio"
>
  <div class="swiper-wrapper">
    <!-- SLIDE 1 - Minería -->
    <div class="swiper-slide">
      <div class="slide slide-1 d-flex align-items-center">
        <div class="slide-content col-lg-7 col-md-9 col-sm-11 d-flex">
          <div>
            <h2 class="slide-title">
              Big Bags Reforzados para la Industria Minera
            </h2>

            <p class="slide-desc">
              Big Bag Perú SAC ofrece sacos industriales de alta resistencia,
              ideales para carga de minerales y operaciones de alto desgaste.
              Soluciones diseñadas para soportar procesos exigentes.
            </p>
          </div>

          <a
            href="/cotizacion"
            class="btn-slide"
            aria-label="Solicitar cotización de big bags para minería"
          >
            Cotizar <i class="fa-solid fa-angle-right fa-lg"></i>
          </a>
        </div>
      </div>
    </div>

    <!-- SLIDE 2 - Agricultura -->
    <div class="swiper-slide">
      <div class="slide slide-2 d-flex align-items-center">
        <div class="slide-content col-lg-7 col-md-9 col-sm-11 d-flex">
          <div>
            <h2 class="slide-title">
              Soluciones de Empaque para la Agroindustria
            </h2>

            <p class="slide-desc">
              Big Bags con protección UV, perfectos para productos agrícolas,
              fertilizantes y semillas. Diseñados para brindar seguridad,
              ventilación y eficiencia en el transporte.
            </p>
          </div>

          <a
            href="/cotizacion"
            class="btn-slide"
            aria-label="Solicitar cotización de big bags para agricultura"
          >
            Cotizar <i class="fa-solid fa-angle-right fa-lg"></i>
          </a>
        </div>
      </div>
    </div>

    <!-- SLIDE 3 - Construcción / Industria general -->
    <div class="swiper-slide">
      <div class="slide slide-3 d-flex align-items-center">
        <div class="slide-content col-lg-7 col-md-9 col-sm-11 d-flex">
          <div>
            <h2 class="slide-title">
              Empaque Industrial para Materiales a Granel
            </h2>

            <p class="slide-desc">
              Soluciones de big bags para sectores como construcción, plástico,
              alimentos y farmacéutica. Productos duraderos, certificados y
              adaptados a las necesidades de cada industria.
            </p>
          </div>

          <a
            href="/cotizacion"
            class="btn-slide"
            aria-label="Solicitar cotización de big bags industriales"
          >
            Cotizar <i class="fa-solid fa-angle-right fa-lg"></i>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Botones -->
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>

  <!-- Paginación -->
  <div class="swiper-pagination"></div>
</div>

<script>
  import Swiper from "swiper";
  import { Navigation, Pagination, Autoplay } from "swiper/modules";

  new Swiper(".heroSwiper", {
    modules: [Navigation, Pagination, Autoplay],
    autoplay: {
      delay: 3000, // tiempo entre slides (3s)
      disableOnInteraction: false, // sigue automático después de arrastrar
    },
    pagination: { el: ".swiper-pagination", clickable: true },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
  import initAOS from "../scripts/aosinit";
  initAOS();
</script>
