---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/navbar.astro";
import Banner from "../components/banner.astro";
import Solutions from "../components/solutions.astro";
import About from "../components/about.astro";
import Gallery from "../components/gallery.astro";
import Products from "../components/products.astro";
import Video from "../components/video.astro";
import Blog from "../components/blog.astro";
import Footer from "../components/footer.astro";

const pageTitle = 'Big Bags para Minería y Logística en Perú';
const pageDescription = 'Big Bags de alta calidad, seguros y sostenibles para Minería, Agricultura y Logística en Perú. Compromiso con la puntualidad y atención personalizada.';
const pageCanonical = 'https://logimportperusac.com/'; 

---

<Layout
	title={pageTitle}
	description={pageDescription}
	canonical={pageCanonical}
>
	<Navbar />
	<Banner />
	<Solutions />
	<About />
	<Gallery />
	<Products />
	<Video />
	<Blog client:load/>
	<Footer />
</Layout>
